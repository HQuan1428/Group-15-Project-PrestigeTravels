{{#if errorMessage}}
<script>
    alert("{{errorMessage}}")
</script>
{{/if}}
<!-- Register Section -->
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="row bg-light shadow-lg rounded overflow-hidden" style="max-width: 900px;">
        <!-- Phần bên trái: Chào mừng -->
        <div class="col-md-6 bg-primary text-white d-flex flex-column justify-content-center align-items-center p-4">
            <h2 class="text-center mb-3">Chào mừng bạn!</h2>
            <p class="text-center">Đăng ký để khám phá những điểm đến tuyệt vời cùng chúng tôi</p>
            <div class="welcome-image w-75 h-50 bg-white rounded" style="background-size: cover;"></div>
        </div>

        <!-- Phần bên phải: Form đăng ký -->
        <div class="col-md-6 p-4">
            <h2 class="text-center mb-4">Đăng ký tài khoản</h2>
            <form id="registerForm" action="/register" method="POST">
                <!-- Thêm loại người dùng -->
                <div class="mb-3">
                    <label for="userType" class="form-label">Loại người dùng</label>
                    <select class="form-select" id="userType" name="userType" required>
                        <option value="provider">Nhà cung cấp</option>
                        <option value="user">Người dùng</option>
                        <option value="admin">Quản trị viên</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="fullName" class="form-label">Họ và tên</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control" id="fullName" name="fullName"
                            placeholder="Nhập họ và tên" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email"
                            required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Số điện thoại</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        <input type="tel" class="form-control" id="phone" name="phone" placeholder="Nhập số điện thoại"
                            required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="Nhập mật khẩu" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                            placeholder="Nhập lại mật khẩu" required>
                    </div>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="terms" required>
                    <label class="form-check-label" for="terms">Tôi đồng ý với các điều khoản và điều kiện</label>
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
                <p class="text-center">Đã có tài khoản? <a href="/login" class="text-primary">Đăng nhập</a></p>
            </form>
        </div>
    </div>
</div>

