<style>
    .card {
        height: 100%;
        display: flex;
        flex-direction: column;
        border: 1px solid #ddd;
        /* Đường viền mặc định */
        border-radius: 8px;
        transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    }

    .card:hover {
        transform: translateY(-10px);
        /* Hiệu ứng nhấc lên khi hover */
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        /* Bóng đổ */
        border-color: #007bff;
        /* Đổi màu viền */
    }

    .card-title {
        min-height: 3em;
        /* Đảm bảo độ cao cố định cho tiêu đề */
    }

    .description {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        /* Hiển thị tối đa 3 dòng */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-bottom: 0.5em;
    }


    .price-display {
        font-size: 1.5rem;
        /* Tăng kích thước chữ */
        font-weight: 700;
        /* Làm chữ đậm hơn */
        color: red;
        text-align: center;
        /* Căn giữa nếu cần */
        margin-top: 6px;
        /* Khoảng cách phía trên */
    }

    .title-display {
        font-size: 1.3rem;
        /* Tăng kích thước chữ */
        font-weight: 600;
        /* Làm chữ đậm hơn */
        color: #afc4db;
        /* Màu xanh nổi bật */
        letter-spacing: 0.5px;
        /* Giãn chữ nhẹ để tạo sự thanh lịch */
        text-transform: uppercase;
        /* Viết hoa toàn bộ chữ */
        text-align: center;
        /* Căn giữa */
        margin-bottom: 15px;
        /* Thêm khoảng cách dưới */
    }

    .title-display:hover {
        color: #3f8bdc;
        /* Thay đổi màu khi hover */
        text-decoration: underline;
        /* Gạch chân khi hover */
        transition: all 0.3s ease-in-out;
        /* Hiệu ứng mượt */
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const readMoreButtons = document.querySelectorAll(".read-more");

        readMoreButtons.forEach((button) => {
            button.addEventListener("click", function () {
                const description = this.previousElementSibling;
                description.style.display = "block";
                description.style.webkitLineClamp = "unset";
                this.style.display = "none"; // Ẩn nút "Xem thêm" sau khi bấm
            });
        });
    });

</script>
<div class="container mt-4">
    <h2>Kết quả tìm kiếm</h2>
    <div class="row">
        {{#if tours.length}}
        {{#each tours}}
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <!-- Ảnh Tour -->
                <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}"
                    style="height: 200px; object-fit: cover; border-top-left-radius: 8px; border-top-right-radius: 8px;">
                <div class="card-body d-flex flex-column">
                    <!-- Tiêu đề -->
                    <h5 class="card-title title-display text-primary font-weight-bold">{{this.title}}</h5>

                    {{!-- <!-- Mô tả -->
                    <p class="card-text text-muted description">{{this.description}}</p> --}}

                    <!-- Giá -->
                    <p class="price-display text-primary font-weight-bold mt-auto">Price: {{formatMoney this.price}}</p>

                    {{!-- <!-- Địa điểm -->
                    <p class="text-muted">Địa điểm: {{this.location_name}}</p> --}}

                    <!-- Nút Xem chi tiết -->
                    <a href="/customer/tours/{{this.id}}" class="btn btn-primary btn-block">Xem chi tiết</a>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="alert alert-warning text-center w-100">
            <p>Không tìm thấy kết quả phù hợp.</p>
        </div>
        {{/if}}
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>