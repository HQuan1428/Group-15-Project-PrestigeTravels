<style>
  .tour-container {
    margin-top: 20px;
  }

  /* Phần tiêu đề tour */
  .tour-header {
    background-color: #007bff;
    color: white;
    padding: 20px;
    border-radius: 10px 10px 0 0;
    text-align: left;
    position: relative;
  }

  .tour-header h3 {
    margin: 0;
    font-size: 1.8rem;
    font-weight: bold;
  }

  .tour-header .info {
    margin-top: 10px;
  }

  .tour-header .info p {
    margin: 5px 0;
    display: flex;
    align-items: center;
    color: #ffe59d;
  }

  .tour-header .info p i {
    margin-right: 10px;
    color: white;
  }

  .tour-header .actions {
    position: absolute;
    top: 20px;
    right: 20px;
    display: flex;
    gap: 15px;
  }

  .tour-header .actions a {
    color: white;
    font-size: 1.2rem;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .tour-header .actions a:hover {
    color: #ffe59d;
  }

  /* Phần hình ảnh */
  .tour-images-container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 20px;
    margin-top: 20px;
  }

  .tour-main-image {
    position: relative;
    border-radius: 10px;
    overflow: hidden;
  }

  .tour-main-image img {
    width: 100%;
    max-height: 300px;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }

  .tour-sub-images {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
  }

  .tour-sub-image {
    border-radius: 10px;
    overflow: hidden;
    position: relative;
  }

  .tour-sub-image img {
    width: 100%;
    height: 100px;
    object-fit: cover;
    transition: transform 0.3s ease;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

  .tour-sub-image img:hover {
    transform: scale(1.1);
  }

  .tour-sub-image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1rem;
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 10px;
  }

  .tour-sub-image:hover .tour-sub-image-overlay {
    opacity: 1;
  }

  /* Thông tin chi tiết */
  .tour-info {
    margin-top: 20px;
  }

  .tour-info h5 {
    color: #0056b3;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .tour-info p {
    margin-bottom: 10px;
  }

  .tour-info ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .tour-info ul li {
    background: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 5px;
    margin-bottom: 5px;
    padding: 10px;
    font-size: 16px;
  }
  .modal-body ul {
  list-style-type: none;
  padding: 0;
}

.modal-body li {
  margin-bottom: 10px;
  line-height: 1.5;
}
.available-dates-container {
  margin-top: 20px;
}

.available-dates {
  display: flex;
  align-items: center;
  gap: 10px;
}

.btn-view-calendar {
  display: flex;
  align-items: center;
  gap: 5px;
  padding: 10px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.btn-view-calendar:hover {
  background-color: #0056b3;
}

.date-list {
  display: flex;
  gap: 10px;
  overflow-x: auto;
  padding: 10px 0;
  scrollbar-width: thin;
}

.date-item {
  text-align: center;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  cursor: pointer;
  min-width: 70px;
  background-color: white;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.date-item:hover {
  background-color: #f0f8ff;
  transform: scale(1.1);
}

.date-item .day {
  font-size: 14px;
  color: gray;
}

.date-item .date {
  font-size: 16px;
  font-weight: bold;
  color: black;
}

.btn-next {
  background-color: white;
  border: 1px solid #ddd;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.btn-next:hover {
  background-color: #f0f8ff;
}


</style>

<div class="container tour-container">
  <!-- Tiêu đề tour -->
  <div class="tour-header">
    <h3>{{tour.title}}</h3>
    <div class="info">
      <p><i class="fas fa-map-marker-alt"></i> {{tour.starting_point}} 
      
      <p><i class="fas fa-clock"></i> Thời gian tour: {{tour.duration}}</p>
    </div>
    
  </div>

  <!-- Hình ảnh -->
  <div class="tour-images-container">
    <div class="tour-main-image">
      <img src="{{tour.main_image}}" alt="Ảnh chính của tour">
    </div>
    <div class="tour-sub-images">
      {{#each tour.sub_images}}
      <div class="tour-sub-image">
        <img src="{{this}}" alt="Ảnh phụ của tour">
        {{#if @last}}
        <div class="tour-sub-image-overlay">Xem Tất Cả Hình Ảnh</div>
        {{/if}}
      </div>
      {{/each}}
    </div>
  </div>

  <!-- Thông tin chi tiết -->
  <div class="tour-info">
    <h5>Thông tin tour:</h5>
    <p><strong>Giá:</strong> {{tour.price}} VND</p>
    <p><strong>Mô tả:</strong> {{tour.description}}</p>
    
    <p><strong>Dịch vụ:</strong></p>
    <ul>
      {{#each tour.services}}
      <li>{{this}}</li>
      {{/each}}
    </ul>

   <!-- Lịch trình -->
<!-- Nút mở modal -->
<button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#itineraryModal">
  Xem lịch trình tour
</button>

<!-- Modal -->
<div class="modal fade" id="itineraryModal" tabindex="-1" aria-labelledby="itineraryModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="itineraryModalLabel">Lịch trình tour</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <ul>
          {{#each tour.itinerary}}
          <li>
            <strong>{{this.title}}</strong><br>
            {{this.description}}
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="available-dates-container">
  <h5>Có vé trống cho bạn</h5>
  <div class="available-dates">
    <button class="btn-view-calendar">
      <i class="fas fa-calendar-alt"></i> Xem lịch
    </button>
    <!-- Danh sách các ngày -->
    <div class="date-list">
      {{#each tour.available_dates}}
      <div class="date-item">
        <span class="day">{{this.day}}</span>
        <span class="date">{{this.date}}</span>
      </div>
      {{/each}}
    </div>
    <!-- Nút điều hướng -->
    <button class="btn-next">
      <i class="fas fa-chevron-right"></i>
    </button>
  </div>
</div>




  </div>
</div>
<script>
  const dateList = document.querySelector('.date-list');
const btnNext = document.querySelector('.btn-next');

btnNext.addEventListener('click', () => {
  dateList.scrollBy({ left: 100, behavior: 'smooth' });
});

</script>