<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        {{> profileSidebar}}
        
        <!-- Main Content -->
        <div class="col-md-9 content">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="fas fa-gift me-2"></i>Khuyến Mãi
                    </h4>

                    <!-- Tabs khuyến mãi -->
                    <ul class="nav nav-tabs mb-4">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#all">
                                Tất cả
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#available">
                                Có thể sử dụng
                            </a>
                        </li>
                    </ul>

                    <!-- Nội dung khuyến mãi -->
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="all">
                            {{#if coupons}}
                                {{#each coupons}}
                                    <div class="coupon-item p-3 mb-3 border rounded">
                                        <div class="d-flex align-items-center">
                                            <div class="coupon-icon me-3">
                                                <i class="fas fa-ticket-alt text-primary fa-2x"></i>
                                            </div>
                                            <div class="coupon-content flex-grow-1">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h5 class="mb-1">{{this.title}}</h5>
                                                    <span class="badge bg-primary">Giảm {{this.discount_percent}}%</span>
                                                </div>
                                                <p class="mb-2">{{this.description}}</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small class="text-muted">
                                                        Mã: <strong>{{this.code}}</strong>
                                                    </small>
                                                    <small class="text-muted">
                                                        Hết hạn: {{formatDate this.end_date}}
                                                    </small>
                                                </div>
                                                {{#if this.tour_name}}
                                                <small class="text-muted d-block mt-1">
                                                    Áp dụng cho tour: {{this.tour_name}}
                                                </small>
                                                {{/if}}
                                            </div>
                                            <div class="ms-3">
                                                <button class="btn btn-sm btn-outline-primary copy-code" 
                                                        data-code="{{this.code}}">
                                                    Sao chép mã
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                {{/each}}
                            {{else}}
                                <div class="text-center py-5">
                                    <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                                    <p>Chưa có khuyến mãi nào</p>
                                </div>
                            {{/if}}
                        </div>

                        <div class="tab-pane fade" id="available">
                            {{#if coupons}}
                                {{#each coupons}}
                                    {{#if this.is_available}}
                                        <div class="coupon-item p-3 mb-3 border rounded">
                                            <div class="d-flex align-items-center">
                                                <div class="coupon-icon me-3">
                                                    <i class="fas fa-ticket-alt text-primary fa-2x"></i>
                                                </div>
                                                <div class="coupon-content flex-grow-1">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <h5 class="mb-1">{{this.title}}</h5>
                                                        <span class="badge bg-primary">Giảm {{this.discount_percent}}%</span>
                                                    </div>
                                                    <p class="mb-2">{{this.description}}</p>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <small class="text-muted">
                                                            Mã: <strong>{{this.code}}</strong>
                                                        </small>
                                                        <small class="text-muted">
                                                            Hết hạn: {{formatDate this.end_date}}
                                                        </small>
                                                    </div>
                                                    {{#if this.tour_name}}
                                                    <small class="text-muted d-block mt-1">
                                                        Áp dụng cho tour: {{this.tour_name}}
                                                    </small>
                                                    {{/if}}
                                                </div>
                                                <div class="ms-3">
                                                    <button class="btn btn-sm btn-outline-primary copy-code" 
                                                            data-code="{{this.code}}">
                                                        Sao chép mã
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    {{/if}}
                                {{/each}}
                            {{else}}
                                <div class="text-center py-5">
                                    <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                                    <p>Không có khuyến mãi nào có thể sử dụng</p>
                                </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.coupon-item:hover {
    background-color: #f8f9fa;
}

.coupon-icon {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: #e9ecef;
}
</style>

<script>
document.querySelectorAll('.copy-code').forEach(button => {
    button.addEventListener('click', async () => {
        const code = button.dataset.code;
        try {
            await navigator.clipboard.writeText(code);
            button.textContent = 'Đã sao chép';
            button.classList.remove('btn-outline-primary');
            button.classList.add('btn-success');
            setTimeout(() => {
                button.textContent = 'Sao chép mã';
                button.classList.remove('btn-success');
                button.classList.add('btn-outline-primary');
            }, 2000);
        } catch (error) {
            console.error('Lỗi khi sao chép:', error);
        }
    });
});
</script> 