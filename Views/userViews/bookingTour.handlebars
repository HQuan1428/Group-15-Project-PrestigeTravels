<div class="container mt-5">
    <h3 class="mb-4">Đặt Tour</h3>
    <form action="/customer/booking/order/{{tour_id}}" method="POST">
        <h1>Tour ID: {{tour_id}}</h1>

        <!-- Chọn ngày -->
        <div class="mb-3">
            <label for="tourDateId" class="form-label">Chọn Ngày</label>
            <select id="tourDateId" name="tourDateId" class="form-control" required>
                {{#each available_dates}}
                <option value="{{this.id}}">{{this.date}} - Số slot: {{this.slots}}</option>
                {{/each}}
            </select>
        </div>

        <!-- Số người lớn -->
        <div class="mb-3">
            <label for="adults" class="form-label">Số Người Lớn</label>
            <input type="number" class="form-control" id="adults" name="adults" value="1" min="1" required>
        </div>

        <!-- Số trẻ em -->
        <div class="mb-3">
            <label for="children" class="form-label">Số Trẻ Em</label>
            <input type="number" class="form-control" id="children" name="children" value="0" min="0">
        </div>

        <!-- Nút submit -->
        <button type="submit" class="btn btn-primary">Đặt Tour</button>
    </form>
</div>
