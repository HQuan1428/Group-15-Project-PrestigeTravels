<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        {{> profileSidebar}}
        <!-- Main Content -->
        <div class="col-md-9 content">
            <div class="card">
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Tour Title</th>
                                <th>Booking Date</th>
                                <th>Adults</th>
                                <th>Children</th>
                                <th>Total Price</th>
                                <th>Payment Method</th>
                                <th>Payment Amount</th>
                                <th>Payment Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each bookingsAndPayments}}
                            <tr>
                                <td>{{tour_title}}</td>
                                <td>{{formatDate booking_date}}</td>
                                <td>{{adults}}</td>
                                <td>{{children}}</td>
                                <td>{{formatMoney total_price}}</td>
                                <td>{{payment_method}}</td>
                                <td>{{formatMoney payment_amount}}</td>
                                <td>{{payment_status}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>