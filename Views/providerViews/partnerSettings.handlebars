<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 bg-light sidebar">
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" href="/partner/services">Quản lý dịch vụ</a></li>
                <li class="nav-item"><a class="nav-link" href="/partner/orders">Danh sách đơn hàng</a></li>
                <li class="nav-item"><a class="nav-link" href="/partner/statistics">Thống kê doanh thu</a></li>
                <li class="nav-item"><a class="nav-link" href="/partner/promotions">Chương trình khuyến mãi</a></li>
                <li class="nav-item"><a class="nav-link" href="/partner/support">Hỗ trợ khách hàng</a></li>
                <li class="nav-item active"><a class="nav-link" href="/partner/settings">Cài đặt</a></li>
                <li class="nav-item"><a class="nav-link" href="/logout">Đăng xuất</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <h2>Cài đặt</h2>
            <form action="/partner/settings/update" method="POST">
                <h3>Thông tin tài khoản</h3>
                <div class="mb-3">
                    <label for="fullName" class="form-label">Tên nhà cung cấp</label>
                    <input type="text" class="form-control" id="fullName" name="fullName" value="{{partner.representative_name}}" required>
                </div>
                <div class="mb-3">
                    <label for="gender" class="form-label">Giới tính</label>
                    <select class="form-select" id="gender" name="gender">
                        <option value="Nam" {{#if (eq partner.gender 'Nam')}}selected{{/if}}>Nam</option>
                        <option value="Nữ" {{#if (eq partner.gender 'Nữ')}}selected{{/if}}>Nữ</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="dob" class="form-label">Ngày tháng năm sinh</label>
                    <input type="date" class="form-control" id="dob" name="dob" value="{{partner.dob}}">
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Nơi cư trú</label>
                    <input type="text" class="form-control" id="location" name="location" value="{{partner.business_address}}">
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
            </form>
            <hr>
            <h3>Thêm thông tin liên hệ</h3>
            <form action="/partner/settings/add-email" method="POST" class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
                <button type="submit" class="btn btn-secondary mt-2">+ Thêm email</button>
            </form>
            <form action="/partner/settings/add-phone" method="POST">
                <label for="phone" class="form-label">Số điện thoại</label>
                <input type="text" class="form-control" id="phone" name="phone" required>
                <button type="submit" class="btn btn-secondary mt-2">+ Thêm số điện thoại</button>
            </form>
        </div>
    </div>
</div>
