<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 bg-light sidebar">
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" href="/partner/services">Quản lý dịch vụ</a></li>
                <li class="nav-item"><a class="nav-link" href="/partner/orders">Danh sách đơn hàng</a></li>
                <li class="nav-item"><a class="nav-link" href="/partner/statistics">Thống kê doanh thu</a></li>
                <li class="nav-item"><a class="nav-link" href="/partner/promotions">Chương trình khuyến mãi</a></li>
                <li class="nav-item"><a class="nav-link active" href="/partner/settings">Cài đặt</a></li>
                <li class="nav-item"><a class="nav-link" href="/logout">Đăng xuất</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <h2>Cài đặt</h2>
            <form action="/partner/settings/update" method="POST">
                <h3>Thông tin nhà cung cấp</h3>
                <div class="mb-3">
                    <label for="representativeName" class="form-label">Tên đại diện</label>
                    <input type="text" class="form-control" id="representativeName" name="representativeName" value="{{partner.representative_name}}" required>
                </div>
                <div class="mb-3">
                    <label for="position" class="form-label">Vị trí</label>
                    <input type="text" class="form-control" id="position" name="position" value="{{partner.position}}">
                </div>
                <div class="mb-3">
                    <label for="businessAddress" class="form-label">Địa chỉ kinh doanh</label>
                    <input type="text" class="form-control" id="businessAddress" name="businessAddress" value="{{partner.business_address}}" required>
                </div>
                <div class="mb-3">
                    <label for="bankAccount" class="form-label">Số tài khoản ngân hàng</label>
                    <input type="text" class="form-control" id="bankAccount" name="bankAccount" value="{{partner.bank_account}}" required>
                </div>
                <div class="mb-3">
                    <label for="bankName" class="form-label">Tên ngân hàng</label>
                    <input type="text" class="form-control" id="bankName" name="bankName" value="{{partner.bank_name}}" required>
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
            </form>
            <hr>
            <!-- Hiển thị danh sách email -->
            <h3>Thông tin liên hệ</h3>
            <h4>Email</h4>
            <ul>
                {{#each emails}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <form action="/partner/settings/add-email" method="POST" class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
                <button type="submit" class="btn btn-secondary mt-2">+ Thêm email</button>
            </form>
            <!-- Hiển thị danh sách số điện thoại -->
            <h4>Số điện thoại</h4>
            <ul>
                {{#each phones}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <form action="/partner/settings/add-phone" method="POST">
                <label for="phone" class="form-label">Số điện thoại</label>
                <input type="text" class="form-control" id="phone" name="phone" required>
                <button type="submit" class="btn btn-secondary mt-2">+ Thêm số điện thoại</button>
            </form>
        </div>
    </div>
</div>
