<div class="container mt-5">
    <h2>Hỗ trợ khách hàng</h2>
    <h3>Danh sách FAQs</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Câu hỏi</th>
                <th>Trả lời</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            {{#each faqs}}
            <tr>
                <td>{{this.order_index}}</td>
                <td>{{this.question}}</td>
                <td>{{this.answer}}</td>
                <td>
                    <form action="/partner/support/{{this.id}}/edit" method="POST" style="display:inline;">
                        <input type="text" name="question" value="{{this.question}}" required>
                        <input type="text" name="answer" value="{{this.answer}}" required>
                        <button type="submit" class="btn btn-warning btn-sm">Cập nhật</button>
                    </form>
                    <form action="/partner/support/{{this.id}}/delete" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <h3>Thêm FAQ</h3>
    <form action="/partner/support/add" method="POST">
        <div class="mb-3">
            <label for="question" class="form-label">Câu hỏi</label>
            <input type="text" class="form-control" id="question" name="question" required>
        </div>
        <div class="mb-3">
            <label for="answer" class="form-label">Trả lời</label>
            <textarea class="form-control" id="answer" name="answer" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</div>
