<h1>Quản lý Tour</h1>
<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <a href="/partner/tours/add" class="btn btn-primary">+ Thêm tour</a>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Mã tour</th>
        <th>Tiêu đề</th>
        <th>Giá</th>
        <th>Điểm bắt đầu</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      {{#each tours}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.price}}</td>
        <td>{{this.starting_point}}</td>
        <td>
          <a href="/partner/tours/{{this.id}}/edit" class="btn btn-warning">Sửa</a>
          <form action="/partner/tours/{{this.id}}/delete" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">Xóa</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
