<h2>Danh sách đơn hàng</h2>
<table>
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Tên khách hàng</th>
            <th>Tình trạng</th>
            <th>Ngày đặt</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        {{#each orders}}
        <tr>
            <td>{{this.order_id}}</td>
            <td>{{this.customer_name}}</td>
            <td>{{this.status}}</td>
            <td>{{this.order_date}}</td>
            <td><a href="/partner/orders/{{this.order_id}}">Chi tiết</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
