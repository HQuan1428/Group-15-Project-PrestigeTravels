<div class="container-fluid" style="padding: 0;">
    <div class="row" style="margin: 0;">
        {{> partnerSidebar}}
        
        <div class="col-md-9" style="padding: 20px;">
            <h2>Danh sách đơn hàng</h2>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Tên khách hàng</th>
                            <th>Tình trạng</th>
                            <th>Ngày đặt</th>
                            <th>Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody>
    {{#if orders.length}}
    {{#each orders}}
        <tr>
            <td>{{this.order_id}}</td>
            <td>{{this.customer_name}}</td>
            <td>{{this.status}}</td>
            <td>{{this.order_date}}</td>
            <td>
                <a href="/partner/orders/{{this.order_id}}">Chi tiết</a>
                {{#if (eq this.status "pending")}}
                <form method="POST" action="/partner/orders/{{this.order_id}}/accept" style="display:inline;">
                    <button type="submit" class="btn btn-success btn-sm">Chấp nhận</button>
                </form>
                {{/if}}
            </td>
        </tr>
    {{/each}}
{{else}}
    <tr>
        <td colspan="5" class="text-center">Không có đơn hàng nào.</td>
    </tr>
{{/if}}

</tbody>


                </table>
            </div>
        </div>
    </div>
</div>
