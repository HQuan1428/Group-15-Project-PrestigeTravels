<h2>Quản lý tài khoản</h2>
<p>Danh sách tài khoản hiện tại:</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Loại tài khoản</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        {{#each accounts}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.type}}</td>
            <td>{{this.status}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>