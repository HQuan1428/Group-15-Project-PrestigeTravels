<!-- Forgot Password Section -->
<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card p-4 shadow-lg" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Khôi phục mật khẩu</h2>
            <p class="text-center mb-4">Nhập email của bạn để nhận liên kết đặt lại mật khẩu.</p>
            <form id="forgotPasswordForm">
                <!-- Email Input -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input type="email" id="email" name="email" class="form-control"
                            placeholder="Nhập email của bạn" required>
                    </div>
                </div>
                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">Gửi liên kết</button>
            </form>
            <!-- Back to Login Link -->
            <div class="text-center mt-3">
                <p class="mb-0">Quay lại trang <a href="/login">Đăng nhập</a></p>
            </div>
        </div>
    </div>
</div>